<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/nagod">


        <ImageView
            android:layout_width="29dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon3">

        </ImageView>

        <ImageView
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/bell3">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="নগদ"
            android:textColor="#e9e2d2"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>


        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="54dp"
            android:background="@drawable/two_color_curved"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:src="@drawable/saka">


            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/custombutton"
                android:text="ব্যালেন্স জানতে ট্যাপ করুন"
                android:textColor="#cc5500"
                android:textSize="16dp"
                android:textStyle="bold"

                >

            </TextView>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/mtp"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="31dp"
                    android:background="@drawable/m2p">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mtp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text=" এম টু পি "
                    android:textColor="#cc5500"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/shadin"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shadhin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shadin"
                    android:layout_centerHorizontal="true"
                    android:text="স্বাধীন"
                    android:textColor="#cc5500"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"

                >

                <ImageView
                    android:id="@+id/ndp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/biboroni" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ndp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="বিবরণী "
                    android:textColor="#cc5500"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#aaaaaa" />


            </RelativeLayout>


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_weight="1"

    >


    <ImageView
        android:id="@+id/biboroni"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/setelment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biboroni"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=" সেটেলমেন্ট "
        android:textColor="#cc5500"
        android:textSize="14dp"
        android:textStyle="bold">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaaaaa"/>


</RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/btp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/nibondhan"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="নিবন্ধন"
                    android:textColor="#cc5500"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#aaaaaa"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                >

        <ImageView
            android:id="@+id/atp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/billpay"
            android:layout_centerInParent="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বিল পে "
                    android:textColor="#cc5500"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/atp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>


            </RelativeLayout>


            

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>